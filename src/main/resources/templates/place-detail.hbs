{{#partial "content"}}

<p>Content:</p>
<p>{{ place.name }}</p>
<h5>Weather:</h5>
<p> {{ place.weather }}</p>
<h5>Duration:</h5>
<p> {{ place.stayLength }}</p>
<p>Rating:</p>
<p> {{ place.grade }}</p>
<h5>Post status:</h5>
<p>
    {{#if place.published }}
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
    {{else}}
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
    {{/if}}

    <a href="/places/{{place.id}}/update">Edit this post</a><br>
    <a href="/places/{{place.id}}/delete">DELETE this post (no undo)</a>
</p>

{{/partial}}

{{> layout.hbs}}